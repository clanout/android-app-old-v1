<android.support.v4.view.ViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="100dp">

    <android.support.v7.widget.CardView
        android:id="@+id/primaryContentCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_local_bar_black_36dp"
                    android:id="@+id/ivListItemEventIcon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Bhant Night"
                        android:maxLength="22"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginRight="4dp"
                        android:id="@+id/tvListItemEventTitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10 May"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:id="@+id/tvListItemEventDate"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19:00, Arbor Brewing Company"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tvListItemEventTimeLocation"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 friends are going"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:id="@+id/tvListItemEventAttendees"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="right"
                    android:id="@+id/ivListItemEventRsvp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_18dp"
                        android:layout_gravity="left|bottom"
                        android:id="@+id/ivListItemEventUpdates"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chat_black_18dp"
                        android:layout_gravity="bottom|right"
                        android:id="@+id/ivListItemEventChat"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/secondaryContentFrameLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bListItemEventGoing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Going"/>

        <Button
            android:id="@+id/bListItemEventMaybe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Maybe"/>

        <Button
            android:id="@+id/bListItemEventNotGoing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Not Going"/>


    </LinearLayout>
    <!--</LinearLayout>-->
</android.support.v4.view.ViewPager>
    <!--</FrameLayout>-->
